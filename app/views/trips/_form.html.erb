<%= form_for([current_user,@trip]) do |f| %>

   <%= f.label :trip_nickname %>
   <%= f.text_field :trip_nickname %><br>

   <%= f.label :start_date %>
   <%= f.text_field :start_date %><br>

   <%= f.label :end_date %>
   <%= f.text_field :end_date %><br>

   <%= f.fields_for :destination do |p| %>
    <%= p.label :destination_city %>
    <%= p.text_field :destination_city %><br> 
   <% end %>

 <%= f.submit %>
 <% end %>

