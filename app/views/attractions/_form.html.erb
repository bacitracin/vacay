<%= form_for(@attraction) do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :attraction_type %><br>
  <%= f.text_field :attraction_type %><br>

  <%= f.label :url %><br>
  <%= f.text_field :url %><br>

  <%= f.fields_for :destination do |p| %>
    <%= p.label :destination_city %><br>
    <%= p.text_field :destination_city %><br> 
  <% end %>

  <%= f.fields_for :trip do |p| %>
    <%= p.label :trip_nickname %><br>
    <%= p.text_field :trip_nickname %>
  <% end %><br><br>

<%= f.submit%>

<% end %>