<h2>See Your Trips</h2>

<h3> Filter Your Trips: </h3>
<%= form_tag('/index', method: 'get') do %>
  <%= select_tag 'start_date', options_for_select(["Upcoming", "Past"])%>
  <%= submit_tag "Filter", name: nil %>
<% end %>

<% @trips.each do |trip| %>
  <li><%= link_to trip.trip_nickname, trip_path(trip) %>  <%= link_to "Delete", trip, method: :delete, data: { confirm: "Delete?"} %></li>
<% end %>
