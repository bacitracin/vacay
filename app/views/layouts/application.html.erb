<!DOCTYPE html>
<html>
<head>
  <title>Vacay</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<h1> Vacay </h1>
  <% if user_signed_in? %><br>
    You are signed in as <b><%= current_user.email %></b>
  <% end %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

<%= yield %>

  <% if user_signed_in? %><br><br>
    <%= link_to('Add a New Trip', new_user_trip_path(current_user))%> or <%= link_to('New Destination', new_destination_path) %> or <%= link_to('New Attraction', new_attraction_path) %><br>
 
    <%= link_to('See All Destinations', destinations_path) %><br>
    <%= link_to('See All Attractions', attractions_path) %><br>
    <%= link_to('See All Your Trips', user_trips_path(current_user)) %><br>
    <%= link_to('Edit Your Profile', edit_user_path(current_user)) %> <br>
    <%= link_to('Log Out', destroy_user_session_path, :method => :delete) %>      
  <% end %>

</body>
</html>
