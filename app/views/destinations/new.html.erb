<%= form_for(@destination) do |destination_builder| %>
  <%= destination_builder.label :city %>
  <%= destination_builder.text_field :city %><br>


  <%= destination_builder.fields_for :trips do |trip_builder| %>
    <%= trip_builder.label :trip_nickname %>
    <%= trip_builder.text_field :trip_nickname %><br>

    <%= trip_builder.label :start_date %>
    <%= trip_builder.text_field :start_date %><br>

    <%= trip_builder.label :end_date %>
    <%= trip_builder.text_field :end_date %><br>
  <% end %>

<%= destination_builder.submit %>

<% end %>

