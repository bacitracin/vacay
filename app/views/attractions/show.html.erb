<h3>Attraction Info</h3>

<b>Name:  </b><%= @attraction.name %><br>
<b>Url: </b><%= link_to @attraction.url, @attraction.url %><br>
<b>Attraction Type: </b><%= @attraction.attraction_type %><br>
<b>City:  </b><%= @attraction.destination.city %><br></b><br>

<h4> These people are interested in <%= @attraction.name %><br><br>

<% @attraction.trips.each do |trip| %>
  <li><%= link_to trip.user.username, user_path(trip.user) %></li>
<% end %>

<br><%= link_to "Edit this Attraction", edit_attraction_path(@attraction) %><br>
<%= link_to "Delete this Attraction", @attraction, method: :delete, data: { confirm: "Delete?"} %></li><br>

<span class='st_email_large' displayText='Email'></span>
<span class='st_twitter_large' displayText='Tweet'></span>
<span class='st_facebook_large' displayText='Facebook'></span>
<span class='st_pinterest_large' displayText='Pinterest'></span>